{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "error",
    "outDir": "dist/ts/",
    "rootDir": "./",
    "strictFunctionTypes": false,
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src", ".storybook/**/*.ts", ".storybook/**/*.tsx"],
  "exclude": ["./src/components/**/*.stories.tsx"]
}

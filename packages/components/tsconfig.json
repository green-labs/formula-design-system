{
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "importsNotUsedAsValues": "error",
    "outDir": "build/ts/",
    "rootDir": "src/",
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2020"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["./src", ".storybook/**/*.ts", ".storybook/**/*.tsx"],
  "exclude": ["./src/components/**/*.stories.tsx"]
}
